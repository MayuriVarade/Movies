<!DOCTYPE html>
<html>

<head>
  <title>Super Flix</title>
</head>

<body>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<%= render "layouts/header"%>
<%= render "layouts/sidebar" %>
<div id="wrapper">

   <% if flash[:alert] %>
     <p class="flash alert">
      <%= flash[:alert] %>
     </p>
   <% end %>
</div>
 
<%= yield %>

<%= render "layouts/footer"%>

</body>
</html>